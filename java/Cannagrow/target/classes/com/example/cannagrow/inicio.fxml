<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="600" prefWidth="800" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cannagrow.MenuController">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="15" style="-fx-background-color: #1f1f1f;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="20" />
            </padding>

            <ImageView fx:id="logoImage" fitWidth="150" preserveRatio="true" />

            <Label text="CannaGrow" textFill="white">
                <font>
                    <Font name="Arial Black" size="20" />
                </font>
            </Label>

            <Button fx:id="inicioButton" maxWidth="180" onAction="#onInicioClick" text="Inicio" />
            <Button fx:id="productosButton" maxWidth="180" onAction="#onProductosClick" text="Productos" />
            <Button fx:id="carritoButton" maxWidth="180" onAction="#onCarritoClick" text="Carrito" />
            <Button fx:id="pedidosButton" maxWidth="180" onAction="#onPedidosClick" text="Pedidos" />
            <Button fx:id="logoutButton" maxWidth="180" onAction="#onLogoutClick" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="Cerrar sesión" />
            <Button fx:id="adminButton" maxWidth="180" onAction="#onAdminClick" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="administrador" />
        </VBox>
    </left>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" maxWidth="9999" prefHeight="598.0" prefWidth="586.0" spacing="30" style="-fx-background-color: #121212;">

                    <padding>
                        <Insets bottom="30" left="30" right="30" top="30" />
                    </padding>

                    <!-- Sección de bienvenida -->
                    <VBox maxWidth="800" spacing="15" style="-fx-background-color: #1f1f1f; -fx-padding: 30; -fx-background-radius: 16;">
                        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Bienvenido a CannaGrow" textFill="white" />
                        <Label maxWidth="700" style="-fx-font-size: 15px;" textFill="#cccccc" wrapText="true">
                            Explora nuestro amplio catálogo de productos para el cultivo y consumo responsable de cannabis.
                            Desde semillas y fertilizantes hasta productos con CBD, ofrecemos soluciones para cultivadores novatos y expertos.
                            ¡Calidad, discreción y servicio profesional garantizados!
                        </Label>
                    </VBox>

                    <!-- Categorías -->
                    <VBox alignment="TOP_CENTER" maxWidth="1000" spacing="10">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Categorías Destacadas" textFill="white" />

                        <!-- IMPORTANTE: Este es el FlowPane que debe tener el ID -->
                        <FlowPane fx:id="contenedorCategorias" alignment="CENTER" hgap="25" prefWrapLength="900" vgap="25">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </FlowPane>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
