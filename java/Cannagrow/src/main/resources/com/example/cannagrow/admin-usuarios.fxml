<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="600" style="-fx-background-color: #212121;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cannagrow.AdminUsuariosController">

    <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Título -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 24px;" text="Administración de Usuarios" textFill="white">
                <font>
                    <Font name="System Bold" size="24" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAgregarUsuario" style="-fx-background-color: #43a047; -fx-text-fill: white;" text="Agregar Usuario" />
        </HBox>

        <!-- Filtros -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ComboBox fx:id="comboFiltroRol" prefWidth="150" promptText="Filtrar por Rol" stylesheets="@dark-theme.css" />
            <TextField fx:id="txtBuscar" promptText="Buscar por nombre o email" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBuscar" style="-fx-background-color: #1976d2; -fx-text-fill: white;" text="Buscar" />
            <Button fx:id="btnLimpiarFiltros" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Limpiar" />
        </HBox>

        <!-- Tabla de Usuarios -->
        <TableView fx:id="tablaUsuarios" stylesheets="@dark-theme.css" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colFoto" prefWidth="60" text="Foto" />
                <TableColumn fx:id="colNombre" prefWidth="120" text="Nombre" />
                <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
                <TableColumn fx:id="colRol" prefWidth="100" text="Rol" />
                <TableColumn fx:id="colSalario" prefWidth="100" text="Salario" />
                <TableColumn fx:id="colAcciones" prefWidth="120" text="Acciones" />
            </columns>
        </TableView>

        <!-- Estadísticas -->
        <HBox spacing="20" style="-fx-background-color: #1f1f1f; -fx-padding: 10px; -fx-background-radius: 5px;">
            <Label fx:id="lblTotalUsuarios" text="Total Usuarios: 0" textFill="white" />
            <Label fx:id="lblTotalEmpleados" text="Empleados: 0" textFill="white" />
            <Label fx:id="lblTotalClientes" text="Clientes: 0" textFill="white" />
        </HBox>
    </VBox>
</AnchorPane>
