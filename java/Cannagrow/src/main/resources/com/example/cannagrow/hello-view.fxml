<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cannagrow.LoginController"
      alignment="CENTER" spacing="15.0" style="-fx-background-color: #1f1f1f;"
      prefWidth="400" prefHeight="500">

  <padding>
    <Insets top="30" right="30" bottom="30" left="30"/>
  </padding>

  <Label text="CannaGrow" textFill="white" font="$xlarge">
    <font>
      <Font name="Arial Black" size="28"/>
    </font>
  </Label>

  <ImageView fitWidth="100" fitHeight="100" pickOnBounds="true"
             image="@cannagrow_logo.png" />

  <Label text="Iniciar sesión" textFill="white" font="$large">
    <font>
      <Font name="Arial" size="20"/>
    </font>
  </Label>

  <TextField fx:id="usernameField" promptText="Usuario" maxWidth="250"
             style="-fx-background-radius: 10; -fx-padding: 10;"/>

  <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="250"
                 style="-fx-background-radius: 10; -fx-padding: 10;"/>

  <Button text="Entrar" onAction="#onLoginClick"
          style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;"
          maxWidth="150"/>

  <Label fx:id="loginMessage" textFill="red" font="$small"/>
</VBox>
