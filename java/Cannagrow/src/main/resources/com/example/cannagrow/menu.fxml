<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cannagrow.MenuController"
            prefWidth="800" prefHeight="600"
            fx:id="rootPane"
            style="-fx-background-color: #121212;">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #1f1f1f;" prefWidth="200" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" left="10" right="10" bottom="10"/>
            </padding>

            <ImageView fx:id="logoImage" fitWidth="150" preserveRatio="true"/>

            <Label text="CannaGrow" textFill="white">
                <font>
                    <Font name="Arial Black" size="20"/>
                </font>
            </Label>

            <Button text="Inicio" onAction="#onInicioClick" fx:id="inicioButton" maxWidth="180"
                    style="-fx-background-color: #7cb342; -fx-text-fill: white;"/>
            <Button text="Productos" onAction="#onProductosClick" fx:id="productosButton" maxWidth="180"
                    style="-fx-background-color: #555555; -fx-text-fill: white;"/>
            <Button text="Carrito" onAction="#onCarritoClick" fx:id="carritoButton" maxWidth="180"
                    style="-fx-background-color: #555555; -fx-text-fill: white;"/>
            <Button text="Pedidos" onAction="#onPedidosClick" fx:id="pedidosButton" maxWidth="180"
                    style="-fx-background-color: #555555; -fx-text-fill: white;"/>
            <Button text="Cerrar sesión" onAction="#onLogoutClick" maxWidth="180"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;"
                    fx:id="logoutButton"/>
            <Button text="Administrador" onAction="#onAdminClick" maxWidth="180"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;"
                    fx:id="adminButton"/>
        </VBox>
    </left>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane>
            <!-- Aquí se mostrará el contenido dinámico según la navegación -->
            <BorderPane fx:id="mainBorderPane">
                <!-- FlowPane para mostrar las categorías -->
                <center>
                    <FlowPane fx:id="contenedorCategorias" hgap="20" vgap="20" alignment="CENTER">
                        <padding>
                            <Insets top="30" right="30" bottom="30" left="30"/>
                        </padding>
                    </FlowPane>
                </center>
            </BorderPane>
        </StackPane>
    </center>
</BorderPane>