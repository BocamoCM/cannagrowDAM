<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cannagrow.MenuController"
            prefWidth="800" prefHeight="600"
            fx:id="mainBorderPane"
            style="-fx-background-color: #121212;">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER"
              prefWidth="200"
              style="-fx-background-color: #1f1f1f;">
            <padding>
                <Insets top="20" left="10" right="10" bottom="10"/>
            </padding>

            <ImageView fx:id="logoImage" fitWidth="150" preserveRatio="true"/>

            <Label text="CannaGrow" textFill="white">
                <font>
                    <Font name="Arial Black" size="20"/>
                </font>
            </Label>

            <Button text="Inicio" onAction="#onInicioClick" fx:id="inicioButton" maxWidth="180"/>
            <Button text="Productos" onAction="#onProductosClick" fx:id="productosButton" maxWidth="180"/>
            <Button text="Carrito" onAction="#onCarritoClick" fx:id="carritoButton" maxWidth="180"/>
            <Button text="Pedidos" onAction="#onPedidosClick" fx:id="pedidosButton" maxWidth="180"/>
            <Button text="Cerrar sesión" onAction="#onLogoutClick" maxWidth="180"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;"
                    fx:id="logoutButton"/>
            <Button text="administrador" onAction="#onAdminClick" maxWidth="180"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;"
                    fx:id="adminButton"/>
        </VBox>
    </left>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="30" alignment="TOP_CENTER"
                      style="-fx-background-color: #121212;"
                      maxWidth="9999">

                    <padding>
                        <Insets top="30" left="30" right="30" bottom="30"/>
                    </padding>

                    <!-- Sección de bienvenida -->
                    <VBox spacing="15" maxWidth="800"
                          style="-fx-background-color: #1f1f1f; -fx-padding: 30; -fx-background-radius: 16;">
                        <Label text="Bienvenido a CannaGrow" textFill="white"
                               style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                        <Label wrapText="true" textFill="#cccccc"
                               style="-fx-font-size: 15px;"
                               maxWidth="700">
                            Explora nuestro amplio catálogo de productos para el cultivo y consumo responsable de cannabis.
                            Desde semillas y fertilizantes hasta productos con CBD, ofrecemos soluciones para cultivadores novatos y expertos.
                            ¡Calidad, discreción y servicio profesional garantizados!
                        </Label>
                    </VBox>

                    <!-- Categorías -->
                    <VBox spacing="10" alignment="TOP_CENTER" maxWidth="1000">
                        <Label text="Categorías Destacadas" textFill="white"
                               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                        <!-- IMPORTANTE: Este es el FlowPane que debe tener el ID -->
                        <FlowPane fx:id="contenedorCategorias" hgap="25" vgap="25" alignment="CENTER" prefWrapLength="900">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                        </FlowPane>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>