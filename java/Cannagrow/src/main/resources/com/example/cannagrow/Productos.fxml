<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cannagrow.AdminProductosController"
            style="-fx-background-color: #121212;">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <!-- Encabezado de la página de productos -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 15;">
                <Label text="Administración de Productos" textFill="white">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <!-- Campo de búsqueda -->
                <TextField fx:id="buscarField" promptText="Buscar productos..." prefWidth="200"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white; -fx-prompt-text-fill: #858585;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <Button text="Buscar" onAction="#buscarProductos"
                        style="-fx-background-color: #3c6e71; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
                <Button text="Recargar" onAction="#recargarProductos"
                        style="-fx-background-color: #4a5859; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>

            <!-- Tabla de productos -->
            <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS" style="-fx-background-color: #1f1f1f; -fx-table-cell-border-color: #3a3a3a;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                    <TableColumn fx:id="colTHC" text="THC %" prefWidth="80" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                    <TableColumn fx:id="colCBD" text="CBD %" prefWidth="80" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
                </columns>
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
            </TableView>

            <!-- Panel de edición -->
            <GridPane hgap="10" vgap="10" style="-fx-background-color: #1a1a1a; -fx-padding: 15;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="ID:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="idField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <Label text="Nombre:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <Label text="Tipo:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="tipoField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <Label text="THC %:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="thcField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <Label text="CBD %:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="cbdField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <Label text="Precio:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="precioField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <Label text="Stock:" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="6"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />

                <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
                    <Button fx:id="guardarButton" text="Guardar Cambios" onAction="#guardarCambios"
                            style="-fx-background-color: #3c6e71; -fx-text-fill: white;" />
                </HBox>
            </GridPane>

            <!-- Pie de página -->
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 10;">
                <Label text="© 2025 CannaGrow - Administración de Productos" textFill="#9e9e9e">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </children>

    <stylesheets>
        <String fx:value="/styles.css"/>
    </stylesheets>
</AnchorPane>